<%= form_for @profile do |f| %>
  <% @profile.errors.full_messages.each do |msg| %>
    <p class="notice"><%= msg %></p>
  <% end %>

  <div class="form-group">
    <label class="btn-left">First Name *</label>
    <%= f.text_field :first_name, placeholder: "First Name", class: "form-control" %>
  </div>

  <div class="form-group">
    <label class="btn-left">Last Name *</label>
    <%= f.text_field :last_name, placeholder: "Last Name", class: "form-control" %>
  </div>

  <div class="form-group">
    <label class="btn-left">Bio</label>
    <%= f.text_area :bio, rows: 5, placeholder: "Say something about yourself", class: "form-control" %>
  </div>

  <div class="actions btn-left">
    <%= f.submit "Save", class: "btn btn-default" %>
    <%= link_to "Back", root_path, class: "btn btn-default" %>
  </div>
<% end %>
